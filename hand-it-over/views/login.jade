extends layout
block content
  .container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In

        // register form
        form(method='POST' action='/login_auth')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='username' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='password', placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log In


